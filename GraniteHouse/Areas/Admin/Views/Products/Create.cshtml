@model GraniteHouse.Models.ViewModels.ProductsViewModel
@{
    ViewData["Title"] = "Create";
}
<br />
<div class="container">
    <h2>Create Product</h2>
    <br />
    <form asp-action="CreatePOST" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Products.Name" class="col-2"></label>
            <div class="col-5">
                <input asp-for="Products.Name" class="form-control" />
            </div>
            <span asp-validation-for="Products.Name"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Products.Price" class="col-2"></label>
            <div class="col-5">
                <input asp-for="Products.Price" class="form-control" />
            </div>
            <span asp-validation-for="Products.Price"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Products.Image" class="col-2"></label>
            <div class="col-5">
                <input type="file" name="files" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Products.ProductTypes" class="col-2"></label>
            <div class="col-5">

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Products.SpecialTags" class="col-2"></label>
            <div class="col-5">

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Products.ShadeColor" class="col-2"></label>
            <div class="col-5">
                <input asp-for="Products.ShadeColor" class="form-control" />
            </div>
            <span asp-validation-for="Products.ShadeColor"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Products.Available" class="col-2"></label>
            <div class="col-5">
                <input type="checkbox" asp-for="Products.Available" class="form-control" />
            </div>
            <span asp-validation-for="Products.Available"></span>
        </div>
        <div class="form-group">
            <a asp-action="Index" class="btn btn-success">Back to List</a>
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </form>
</div>

