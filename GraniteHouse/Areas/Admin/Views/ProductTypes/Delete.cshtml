@model GraniteHouse.Models.ProductTypes
@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-info">Edit Product Type</h2>

<form asp-action="Delete" method="post">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductName"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductName" class="form-control" disabled />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</form>

